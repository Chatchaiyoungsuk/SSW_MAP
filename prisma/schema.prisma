datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}

model sites {
  name   String  @db.VarChar
  lat    Float   @db.Real
  lng    Float   @db.Real
  detail String? @db.VarChar
  id     Int     @id(map: "sites_pk") @default(autoincrement())
}
