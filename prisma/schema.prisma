generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model sites {
  name   String  @db.VarChar
  lat    Float   @db.Real
  lng    Float   @db.Real
  detail String? @db.VarChar
  id     Int     @id(map: "sites_pk") @default(autoincrement())
}

model users {
  email    String @id(map: "users_pk") @db.VarChar
  name     String @db.VarChar
  password String @db.VarChar
}
